<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN"
        "http://jetty.mortbay.org/configure.dtd">

<Configure id="dev-config" class="org.mortbay.jetty.Server">

    <New id="userdb" class="org.mortbay.jetty.plus.naming.Resource">
        <Arg>jdbc/users</Arg>
        <Arg>
            <New class="org.apache.commons.dbcp.BasicDataSource">
                <Set name="driverClassName">org.apache.derby.jdbc.EmbeddedDriver</Set>
                <Set name="url">jdbc:derby:target/Users;create=true</Set>
                <Set name="username">sa</Set>
                <Set name="password"></Set>
            </New>
        </Arg>
    </New>

</Configure>